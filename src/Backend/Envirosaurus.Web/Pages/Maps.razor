@page "/maps"
@using Services

@code {
    [Inject]
    FacilityMapService _FacilityService { get; set; }
}
<PageTitle>@GlobalSettings.ProductName - Maps</PageTitle>

<h1>Maps</h1>

<table class="table">
    <thead>
        <tr>            
            <th>Name</th>
            <th>Weather Code</th>
        </tr>
    </thead>

@foreach (FacilityMap map in _FacilityService.GetAll())
{
    <tr>
        <td><a href="/maps/@map.Id">@map.Name</a></td>
        <td>@map.WeatherStationCode</td>
    </tr>
}
</table>